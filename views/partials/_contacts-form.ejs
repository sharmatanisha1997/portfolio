<form action="/contacts<%= contact !== null ? '/edit/'+contact.id : '' %>" method="post" class="needs-validation" novalidate>
  <div class="form-row">
    <div class="col-12 mb-3">
      <label for="name">Name</label>
      <input
        type="text"
        class="form-control"
        name="name"
        id="name"
        placeholder="Name"
        value="<%= contact !== null ? contact.name : '' %>"
        required
      />
      <div class="invalid-tooltip">Please input the required field.</div>
    </div>
    <div class="col-12 mb-3">
      <label for="phone">Phone Number</label>
      <input
        type="number"
        class="form-control"
        name="phone"
        id="phone"
        placeholder="Phone number"
        value="<%= contact !== null ? contact.phone : '' %>"
        required
      />
      <div class="invalid-tooltip">Please enter a valid input.</div>
    </div>
    <div class="col-12 mb-3">
      <label for="email_address">Email</label>
      <input
        type="email"
        class="form-control"
        name="email"
        id="email_address"
        placeholder="Email address"
        value="<%= contact !== null ? contact.email : '' %>"
        required
      />
      <div class="invalid-tooltip">Please input a valid email address.</div>
    </div>
  </div>
  <div class="d-flex justify-content-between">
    <button class="btn btn-primary" type="submit"><%= contact !== null ? "Update" : 'Create' %></button>
    <% if(contact !== null) { %>
      <a href="/contacts/delete/<%= contact.id %>" class="btn btn-danger">Delete</a>
    <% } %>
    <a href="/contacts" class="btn btn-secondary">Cancel</a>
  </div>
</form>
<br />
