<% if (message) { %>
  <div class="alert alert-<%= message.type %> alert-dismissible fade show col-12 col-md-4" role="alert">
    <strong><%= message.title %>!</strong>&nbsp;<%= message.details %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% } %>

